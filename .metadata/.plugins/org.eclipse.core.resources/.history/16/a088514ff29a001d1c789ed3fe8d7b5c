package AutomatedTellerMachine;

import java.util.*;

public class Main {
	
	static ArrayList<CustomerCreation> Customers = new ArrayList<>();

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		boolean flag = true;
		int count = 0;
		while(flag) {
			System.out.println("Press 1 for create account.");
			System.out.println("Press 2 for existing account.");
			System.out.println("Press 0 for exit.");
	
			int a = in.nextInt();
			
			if(a == 1) {
				System.out.println("Enter Your ID: ");
				int id = in.nextInt();
				System.out.println("Enter Your Name: ");
				in.next();
				String name = in.next();
				System.out.println("Enter Your Password: ");
				String pass = in.next();
				CustomerCreation cc = new CustomerCreation(id,name,pass);
				Customers.add(cc);
				System.out.println("Your account has been created.");
				System.out.println(Customers.get(count).getId());
				System.out.println(Customers.get(count).getName());
				System.out.println(Customers.get(count).getPass());
				count++;
			}
			else if(a == 2) {
				
			}
			else {
				System.out.print("Thank you");
				flag = false;
			}
		}
		in.close();
		
	}

}
